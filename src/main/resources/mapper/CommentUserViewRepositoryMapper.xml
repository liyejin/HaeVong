<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.heabong.web.repository.CommentUserViewRepository">
	<select id="findByPostId" resultType="kr.co.heabong.web.entity.CommentUserView">
		select * from comment_user_view where post_id = #{postId}
	</select>
	<select id="findByParentId" resultType="kr.co.heabong.web.entity.CommentUserView">
		select * from comment_user_view where parent_id = #{parentId}
	</select>
</mapper>